#!/bin/bash
#===============================================================================
#
#          FILE:  increment-deb-version
#
#         USAGE:  ./increment-deb-version
#
#   DESCRIPTION:  Updates the Cydia package version.
#
#        AUTHOR:  Sorin Ionescu <sorin.ionescu@gmail.com>
#       VERSION:  1.0.0
#       CREATED:  2009-10-21 12:57:00-04:00
#===============================================================================
cd $( dirname $0 )

if [[ ! -n $1 ]]
then
	exit 1;
fi
	
for b in ../src/*
do
	# git checkout $b/debian/control;
	sed -e "s/Version: [0-9]\.[0-9]\.[0-9]\{0,2\}/Version: ${1}/g" $b/debian/control > $b/debian/control.tmp;
	mv -f $b/debian/control.tmp $b/debian/control;
done